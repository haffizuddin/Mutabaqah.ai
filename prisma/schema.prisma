// Prisma Schema for Mutabaqah.ai
// Supports both PostgreSQL (Supabase) and MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Change to "mysql" for MySQL
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication Models (NextAuth compatible)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(VIEWER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Tawarruq Transaction Models
// ============================================

model Transaction {
  id              String            @id @default(cuid())
  transactionId   String            @unique // TXN-20250122-001
  customerName    String
  customerId      String
  commodityType   CommodityType     @default(CPO)
  amount          Decimal           @db.Decimal(18, 2)
  currency        String            @default("MYR")
  status          TransactionStatus @default(PENDING)
  shariahStatus   ShariahStatus     @default(PENDING_REVIEW)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  auditEvents      AuditEvent[]
  auditLogs        AuditLog[]
  aiAuditSummary   AiAuditSummary?

  @@index([customerId])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

model AuditEvent {
  id            String           @id @default(cuid())
  transactionId String
  stage         AuditStage
  stageName     String           // WAKALAH_AGREEMENT, QABD, LIQUIDATE
  status        AuditEventStatus @default(PENDING)
  timestamp     DateTime         @default(now())
  completedAt   DateTime?
  certificateId String?          @unique
  metadata      Json?

  transaction Transaction  @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  certificate Certificate? @relation(fields: [certificateId], references: [id])

  @@index([transactionId])
  @@index([stage])
  @@map("audit_events")
}

model Certificate {
  id                String          @id @default(cuid())
  certificateNumber String          @unique
  type              CertificateType
  issuedBy          String          @default("Bursa Suq As Sila")
  issuedAt          DateTime        @default(now())
  expiresAt         DateTime?
  data              Json            // Certificate details

  auditEvent AuditEvent?

  @@map("certificates")
}

model AuditLog {
  id            String        @id @default(cuid())
  transactionId String?
  eventType     String
  message       String
  severity      LogSeverity   @default(INFO)
  timestamp     DateTime      @default(now())
  metadata      Json?

  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  @@index([transactionId])
  @@index([timestamp])
  @@index([severity])
  @@map("audit_logs")
}

model AiAuditSummary {
  id              String   @id @default(cuid())
  transactionId   String   @unique
  summary         String   @db.Text
  complianceScore Int      // 0-100
  findings        Json     // Array of findings
  recommendations Json     // Array of recommendations
  generatedBy     String   @default("simulated") // simulated | gemini
  createdAt       DateTime @default(now())

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@map("ai_audit_summaries")
}

// ============================================
// Enums
// ============================================

enum UserRole {
  ADMIN
  OPERATOR
  VIEWER
}

enum CommodityType {
  CPO        // Crude Palm Oil
  FPOL       // RBD Palm Olein Futures
  FUPO       // USD Palm Olein Futures
  FGLD       // Gold Futures
  OTHER
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  VIOLATION
  CANCELLED
}

enum ShariahStatus {
  COMPLIANT
  NON_COMPLIANT
  PENDING_REVIEW
  UNDER_INVESTIGATION
}

enum AuditStage {
  T0  // Wakalah Agreement
  T1  // Qabd (Asset Purchase)
  T2  // Liquidate (Murabahah Execution)
}

enum AuditEventStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum CertificateType {
  WAKALAH_AGREEMENT
  QABD_CONFIRMATION
  LIQUIDATION_CERTIFICATE
}

enum LogSeverity {
  INFO
  WARNING
  ERROR
  CRITICAL
}
